{
	"format_version": "1.8.0",
	"animations": {
		"animation.scout_drone.idle": {
			"loop": true,
			"animation_length": 2,
			"bones": {
				"all": {
					"rotation": {
						"0.0": {
							"post": [0, 0, 0],
							"lerp_mode": "catmullrom"
						},
						"0.5": {
							"post": [0, 0, 5],
							"lerp_mode": "catmullrom"
						},
						"1.5": {
							"post": [0, 0, -5],
							"lerp_mode": "catmullrom"
						},
						"2.0": [0, 0, 0]
					},
					"position": {
						"0.0": {
							"post": [0, 0, 0],
							"lerp_mode": "catmullrom"
						},
						"1.0": {
							"post": [0, 2, 0],
							"lerp_mode": "catmullrom"
						},
						"2.0": [0, 0, 0]
					}
				},
				"rail": {
					"scale": 0
				}
			}
		},
		"animation.scout_drone.move": {
			"loop": true,
			"bones": {
				"all": {
					"rotation": [0, 0, 0]
				},
				"rail": {
					"scale": 0
				}
			}
		},
		"animation.scout_drone.invisibility": {
			"loop": true,
			"bones": {
				"all": {
					"scale": 0
				},
				"root": {
                  "scale": 0
                },
				"head": {
                  "scale": 0
                }
			}
		},
		"animation.scout_drone.deployment": {
			"loop": true,
			"override_previous_animation": true,
			"bones": {
				"tail0": {
					"scale": "q.mod.scout_drone_deployment_tail == 0"
				},
				"tail1": {
					"scale": "q.mod.scout_drone_deployment_tail == 1"
				},
				"rotor0": {
					"scale": "q.mod.scout_drone_deployment_rotor == 0"
				},
				"rotor1": {
					"scale": "q.mod.scout_drone_deployment_rotor == 1"
				},
				"load1": {
					"scale": "q.mod.scout_drone_deployment_load == 1"
				},
				"load2": {
					"scale": "q.mod.scout_drone_deployment_load == 2"
				}
			}
		}
	}
}